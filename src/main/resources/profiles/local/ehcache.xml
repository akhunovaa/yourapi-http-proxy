<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="ehcache.xsd"
    updateCheck="true"
    monitoring="autodetect"
    dynamicConfig="true">

    <diskStore path="java.io.tmpdir" />

    <cache name="apiProxyData"
        maxEntriesLocalHeap="10000"
        maxEntriesLocalDisk="1000"
        eternal="false"
        diskSpoolBufferSizeMB="20"
        timeToIdleSeconds="300" timeToLiveSeconds="600"
        memoryStoreEvictionPolicy="LRU"
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>

    <cache name="api-data" maxEntriesLocalHeap="1000" maxEntriesLocalDisk="2000" eternal="false"
        diskSpoolBufferSizeMB="100" timeToIdleSeconds="60" timeToLiveSeconds="120" memoryStoreEvictionPolicy="LFU"
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>

    <cache name="subscription-data" maxEntriesLocalHeap="1000" maxEntriesLocalDisk="2000" eternal="false"
        diskSpoolBufferSizeMB="100" timeToIdleSeconds="30" timeToLiveSeconds="60" memoryStoreEvictionPolicy="LFU" transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>

</ehcache>